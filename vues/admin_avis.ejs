<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Avis - Admin</title>
  <link rel="stylesheet" href="/style.css">
  </head>
<body>
  <header>
    <h1>Gestion des avis</h1>
    <nav>
      <a href="/">Accueil</a> |
      <a href="/admin/utilisateurs">Utilisateurs</a> |
      <a href="/admin/salles">Salles</a> |
      <a href="/admin/avis">Avis</a> |
      <a href="/deconnexion">DÃ©connexion</a>
    </nav>
  </header>
  <main>
    <% if(avis && avis.length){ %>
      <ul>
        <% avis.forEach(function(a){ %>
          <li>
            <strong><%= a.salle ? a.salle.titre : 'Salle' %></strong>
            - <%= a.client ? a.client.nom : 'Utilisateur' %> (<%= a.client ? a.client.email : '' %>)
            - <%= a.note %>/5
            <p><%= a.commentaire %></p>
            <form action="/admin/avis/supprimer/<%= a._id %>" method="post" style="display:inline">
              <button type="submit" onclick="return confirm('Supprimer cet avis ?')">Supprimer</button>
            </form>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>Aucun avis</p>
    <% } %>
  </main>
</body>
</html>
